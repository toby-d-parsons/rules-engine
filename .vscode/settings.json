{
  "rubyLsp.features.testRunner": "rspec",

  // Disable gutter test decorations (this removes lefthand green icons)

  "testing.gutterEnabled": false,
  "editor.codeLens": true,
  "testing.automaticallyDetectTestSuites": "off",
  "testing.autoRun.mode": "off",
  "extensions.ignoreRecommendations": true,
  "workbench.experimental.testDiscover": false,
  "ruby.test.enabled": false,

  "files.exclude": {
    "**/vendor/bundle": true
  },
  "search.exclude": {
    "**/vendor/bundle": true
  },
  "files.watcherExclude": {
    "**/vendor/bundle/**": true
  }  
}
